#!/bin/bash

echo "Running Supply Script of custom buildpack"
output_dir=$(mktemp -d -t supplyXXX)

export BUILDPACK_DIR=`dirname $(readlink -f ${BASH_SOURCE%/*})`
BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3/$4

curl https://nodejs.org/download/release/v12.5.0/node-v12.5.0-linux-x64.tar.gz > $2/node.tgz

mkdir -p $DEPS_DIR/node
tar -xzf $2/node.tgz -C $DEPS_DIR/

mkdir $DEPS_DIR/bin

exit 0