#!/bin/bash

export BUILDPACK_DIR=`dirname $(readlink -f ${BASH_SOURCE%/*})`
BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3/$4

ls -la $DEPS_DIR/node-v12.5.0-linux-x64
export PATH=$DEPS_DIR/bin:$PATH


ln -s $DEPS_DIR/node-v12.5.0-linux-x64/bin/node $DEPS_DIR/bin/node 
ln -s $DEPS_DIR/node-v12.5.0-linux-x64/bin/npm $DEPS_DIR/bin/npm 

cp $BUILDPACK_DIR/app.js .
cp $CACHE_DIR/function.js .
cp $CACHE_DIR/package.json .
cp $CACHE_DIR/package-lock.json .

npm install 